@model WebSalesMvc.Models.Seller

@{
    ViewData["Title"] = "Cadastro";

}
<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label">Salário</label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label">Data de nascimento</label>
                <input asp-for="Birthdate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>
