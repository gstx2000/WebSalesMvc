@model List<WebSalesMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "Registro de vendas";
}

<h2>@ViewData["Title"]</h2>
<hr />
<a class="btn btn-default" asp-action="GroupingSearch">Filtro agrupado</a>
<a class="btn btn-default" asp-action="SimpleSearch">Filtro simples</a>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Data</th>
                <th>Valor</th>
                <th>Status</th>
                <th>Vendedor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date</td>
                    <td>@item.Amount</td>
                    <td>@item.Status</td>
                    <td>@item.Seller.Name</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    </td>
                </tr>
               
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Create" class="btn btn-default">Nova venda</a>
</div>
