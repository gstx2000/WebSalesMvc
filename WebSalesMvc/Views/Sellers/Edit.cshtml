@model WebSalesMvc.Models.SellerFormViewModel

@{
    ViewData["Title"] = "Editar";

}
<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">Nome</label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">Email</label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Seller.Phone" class="control-label">Telefone</label>
                <input asp-for="Seller.Phone" class="form-control" />
                <span asp-validation-for="Seller.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">Salário</label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Seller.Birthdate" class="control-label">Data de nascimento</label>
                <input asp-for="Seller.Birthdate" class="form-control" />
                <span asp-validation-for="Seller.Birthdate" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Departamento</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

