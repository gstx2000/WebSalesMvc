@{
    ViewData["Title"] = "Busca de vendas";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Busca simples</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2" control-label>Data de início</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="formcontrol" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2" control-label>Data limite</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="formcontrol" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Busca agrupada</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2" control-label>Data de início</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="formcontrol" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2" control-label>Data limite</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="formcontrol" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
  